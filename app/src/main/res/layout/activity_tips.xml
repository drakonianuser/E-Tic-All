<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_tips"
    tools:context=".Aprende.ActivityTips">

    <ScrollView
        android:layout_width="294dp"
        android:layout_height="493dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/img_tips" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="300dp"
                android:layout_height="124dp"
                android:text="-Limitar el tiempo que se pasa al día en internet o haciendo uso de las TIC, entre unas 6 a 7 horas son suficientes y en algunos casos hasta más."
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="300dp"
                android:layout_height="144dp"
                android:text="-Mantener una comunicación fuera de las redes sociales con sus contactos, intentar abstenerse de entablar una amistad con alguien del que no se haya tenido contacto físico."
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="300dp"
                android:layout_height="126dp"
                android:text="-Usar todas las medidas de privacidad y seguridad que ofrecen las redes sociales para alejar nuestra información de alguien malintencionado."
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="300dp"
                android:layout_height="203dp"
                android:text="-Los padres hacer un seguimiento de lo que sus hijos hacen en internet, con quien hablan, que paginas visitan comúnmente, que videos revisan en redes sociales y hasta en algunos casos que videojuegos poseen sus hijos en los dispositivos."
                android:textSize="18sp"
                android:typeface="serif" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>